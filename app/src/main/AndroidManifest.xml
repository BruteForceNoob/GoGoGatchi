<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gogogatchi.gogogatchi">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.SplitHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LocationViewActivity" />
        <activity android:name=".activities.MonsterHatchActivity" />
        <activity android:name=".activities.HomeSwipeActivity" />
        <activity android:name=".activities.FeedActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.SettingsActivity"></activity>
        <activity android:name=".activities.RegisterActivity"></activity>
        <activity android:name=".activities.MainActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key"/>

    </application>

</manifest>