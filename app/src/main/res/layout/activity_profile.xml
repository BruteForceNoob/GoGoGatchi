<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:id="@+id/txtUsernameProfile"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/username"
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" />

    <TextView
        android:id="@+id/txtEmailProfile"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/email"
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAgeProfile" />

    <TextView
        android:id="@+id/txtGenderProfile"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/gender"
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsernameProfile" />


    <TextView
        android:id="@+id/txtAgeProfile"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/age"
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGenderProfile" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_profile" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/gotham"
        android:shadowRadius="20"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/red"
        app:autoSizeMaxTextSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtUsernameProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/gotham"
        android:shadowRadius="20"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/red"
        app:autoSizeMaxTextSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtEmailProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewAge"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtGenderProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:fontFamily="@font/gotham"
        android:textColor="@color/red"
        android:shadowRadius="20"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtAgeProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewGender" />

</android.support.constraint.ConstraintLayout>
